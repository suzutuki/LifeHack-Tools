<header class="navbar navbar-expand-xl navbar-inverse">
  <div class="container">
    <!--ハンバーガーメニューここから-->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(content_tag(:i, 'HOME', class: "fas fa-home fa-3x fas faa-vertical
      animated-hover", style: "color: #fff;"), root_path) %>
    </div>
    <nav>
      <!-- ulタグ内に「id="navbar"」を追記、classに「navbar-collapse collapse」を追記 -->
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse" style="text-align: right;">
        <!--ココに入れる-->
        <% if logged_in? %>
          <li>
            <%= link_to "My ToDoリスト！", user_path(current_user),
                        style: "font-size: 26px; color: #fff;" %>
          </li>
          <li>
            <%= link_to 'Config', edit_user_path(current_user),
                        style: "font-size: 26px; color: #fff;"
            %>
          </li>
          <li>
            <%= link_to "Log out", logout_path, method: :delete,
                        data: {confirm: "ログアウトしますか？"},
                        style: "font-size: 26px; text-align: right; color: #fff;" %>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path,
                          style: "font-size: 28px; color: #fff;" %></li>
          <li><%= link_to "Sign-up!", signup_path,
                          style: "font-size: 28px; color: #fff;" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
