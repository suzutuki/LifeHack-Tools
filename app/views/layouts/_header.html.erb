<header class="navbar navbar-inverse">
  <div class="container">
    <!-- 追記ここから-->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%=link_to(content_tag(:i,'HOME',class:"fas fa-home fa-3x fas faa-vertical
      animated-hover",style: "color: #fff;"),root_path)%>
      <ul class="nav navbar-nav navbar-right">
    </div>
    <!-- 追記ここまで-->
    <nav>
      <!-- ulタグ内に「id="navbar"」を追記、classに「navbar-collapse collapse」を追記 -->
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
<!--ココに入れる-->

        <% if logged_in? %>
          <li>
        <%=link_to "My ToDoリスト！", user_path(current_user),
        style: "background: rgba(250, 240, 230, 0.1);color: #fff; font-size: 33px;" %>
          </li>
          <li>
          <%=link_to(content_tag(:i,'Config',class:"fas fa-cog  fa-2x ",
          style: "background: rgba(250, 240, 230, 0.1);" "color: #fff;" ),
          edit_user_path(current_user))%>
           </li>
           <li>
              <%= link_to "Log out", logout_path, method: :delete,
              data: {confirm: "ログアウトしますか？"},
              style: "background: rgba(250, 240, 230, 0.1); font-size: 32px; text-align: left;"%>
           </li>
            <% else %>
          <!--<nav class="head-link">-->
          <li><%= link_to "Log in", login_path,
          style: "background: rgba(250, 240, 230, 0.1); font-size: 28px; color: #fff;"%></li>
          <li><%= link_to "Sign-up!", signup_path,
            style: "background: rgba(250, 240, 230, 0.1); font-size: 28px; color: #fff;"%>
          </li>
        <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>
