<%= render 'layouts/head' %>
<%#= render 'layouts/header' %>
<!--モバイルメニューとヘッダー担当-->
<body>
<div id="global-container">
  <div id="container">
    <div class="mobile-menu__cover"></div>
    <div class="nav-trigger"></div>
    <header class="header">
      <div class="header__inner">
        <%= link_to(content_tag(:i, 'LifeHack Tools', class: "fas fa-home fa-2x fas faa-vertical
      animated-hover", style: "color: #1d1d1f;"), root_path) %>
        <nav class="header__nav">
          <ul class="header__ul">
            <% if logged_in? %>
              <li class="header__li item">
                <%= link_to "ToDoリスト", task_path(current_user) %>
              </li>
              <li class="header__li item">
                <%= link_to 'Config', edit_user_path(current_user) %>
              </li>
              <li class="header__li item">
                <%= link_to "Log out", logout_path, method: :delete,
                            data: { confirm: "ログアウトしますか？" } %>
              </li>
            <% else %>
              <li class="header__li item">
                <%= link_to "Log in", login_path %>
              </li>
              <li class="header__li item">
                <%= link_to "Sign-up!", new_user_path %>
              </li>
            <% end %>
          </ul>
        </nav>
        <button class="mobile-menu__btn">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>
    <!--ヘッダーココまで-->
    <!--divが2つ閉じられていないのに注意-->
    <!--footerの前に閉じるのとnavの後とscriptの前に閉じる-->
    <%= render 'layouts/flash_messages' %>
    <!--ココにそれぞれのページの内容-->
    <%= yield %>
    <!--ココからサイドバー右-->
<%#= render 'layouts/side-right' %>
    </main>
    <aside class="side right">
      <div class="side__inner">
        <span>&copy;Ota</span>
      </div>
    </aside>
  </div>
  <!--ローカルスタッキングコンテキストを閉じるためのdiv-->
  <!--ココからフッター-->
  <%#= render 'layouts/footer' %>
  <footer class="footer appear up">
    <nav class="footer__nav">
      <ul class="footer__ul">
        <div class="logo item">
          <li class="footer__li item">
            <%= link_to 'LifeHack Tools！', root_url, style: "color: #333;" %>
          </li>
        </div>
        <li class="footer__li item"><a href="#">Service</a></li>
        <li class="footer__li item"><a href="#">Contact</a></li>
        <li class="footer__li item"><a href="#">Company</a></li>
        <li class="footer__li item"><a href="#">Sitemap</a></li>
        <div class="footer__copyright item">&copy suzutuki
      </ul>
</div>
</nav>
</footer>
<%#= render 'layouts/mobile-menu' %>
<!--ココからモバイルメニュー-->
<nav class="mobile-menu">
  <div class="logo">
    <img class="logo__img" src="/logo.svg" alt=""/>
    <span class="logo__ stay">LifeHack</span>
    <span class="logo__world">Tools</span>
  </div>
  <ul class="mobile-menu__main">
    <li class="mobile-menu__item">
      <a class="mobile-menu__link" href="#">
        <span class="main-title">Our Service</span>
        <span class="sub-title">サービスについて</span>
      </a>
    </li>
    <li class="mobile-menu__item">
      <a class="mobile-menu__link" href="#">
        <span class="main-title">About Us</span>
        <span class="sub-title">私たちについて</span>
      </a>
    </li>
    <li class="mobile-menu__item">
      <a class="mobile-menu__link" href="#">
        <span class="main-title">Contact Us</span>
        <span class="sub-title">コンタクト方法</span>
      </a>
    </li>
  </ul>
</nav>
</div>
</div>
</div>
</div>
<script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
</body>
</html>



