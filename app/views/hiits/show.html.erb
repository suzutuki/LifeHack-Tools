<% if @hiits.any? %>
  <div id="main-content">
    <aside class="side left">
      <%= link_to(content_tag(:i, '', class: "fas fa-angle-left fa-3x
      faa-horizontal animated-hover", style: "color: rgb(80,80,80);"), hiit_path(current_user)) %>
    </aside>
    <main>
      <section class="todo">
        <div class="log-form">
          <div class="form-title tween-animate-title center-position">HIIT記録</div>
          <div class="chart-container" style="position: relative; width: 100%; height: 400px;">
          <canvas id="sportsChart"></canvas>
          </div>
          <script>
              var graphdays = <%== @dayline %>, graphtimes = <%= @timeline %>
          </script>
          <script>draw_graph();</script>
        </div>
        <div class="center-position">
          <%= link_to "運動記録をつける", new_hiit_path, class: "btn slide-slow" %>
          <%= link_to "シンプル", simple_path, class: "btn slide-slow" %>
        </div>
      </section>
      <section class="form-width">
    <div class="todo-form appear right">
        <div class="todo-title item">MY training record</div>
        <% @hiits.each do |hiits| %>
          <div class="todo__list item ">
            <h2 class="item center-position">運動した日: <%= hiits.training_day %></h2>
              <h2 class="item center-position">運動時間: <%= hiits.training_time %>分</h2>
                <div class="center-position">
              <%= link_to(content_tag(:i, '', class: "fas fa-edit fa-2x faa-vertical animated-hover",
                                      style: "color: rgb(80,80,80);"), edit_hiit_path(hiits.id)) %>
              <%= link_to(content_tag(:i, '', class: "fas fa-trash-alt fa-2x faa-horizontal animated-hover center-position",
                                      style: "color: rgb(80,80,80);"), hiit_path(hiits.id), method: :delete, data: { confirm: "本当に削除しますか？" }) %>
          </div>
              </div>
        <% end %>
<% end %>
</div>
</section>
</main>