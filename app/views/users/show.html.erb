<% provide(:title, "new") %>
<div id="main-content">
  <aside class="side left">
    <%= link_to(content_tag(:i, '', class: "fas fa-angle-left fa-3x
      faa-horizontal animated-hover", style: "color: rgb(80,80,80);"), task_path(current_user)) %>
  </aside>
  <main>
    <section class="todo">
      <div class="log-form">
        <div class="form-title tween-animate-title">ユーザー管理画面</div>
        <% @users.each do |user| %>
          <li>
            <div class="content-width">
              <h3 class="todo__label">
                <%= user.name %>
                <%= user.email %>
                <% if current_user.admin? && !current_user?(user) %>
                  <%= link_to "このユーザーを削除します", user, method: :delete,
                              data: { confirm: "本当にユーザーを削除しますか？" }, class: 'btn slide-slow' %>
                  </h3>
                  </div>
                  </li>
                <% end %>
        <% end %>
    </section>
  </main>