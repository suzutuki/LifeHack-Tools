<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class= "site-width">
      <section id="new-todo-list">
    <div class="new-todo-list-form">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <h3>
      <%= f.label :名前, class: 'label'%>
      <%= f.text_field :name, class: 'form-field' %>
      
      <%= f.label :メールアドレス,  class: 'label'%>
      <%= f.email_field :email, class: 'form-field' %>

      <%= f.label :パスワード, class: 'label' %>
      <%= f.password_field :password, class: 'form-field' %>

      <%= f.label :パスワード確認, class: 'label' %>
      <%= f.password_field :password_confirmation, class: 'form-field' %>

      <%= f.submit "登録", class: "btn", style: "background-color: #ffaf58;" %>
      </h3>
    <% end %>
    </div>
  </div>
</div>