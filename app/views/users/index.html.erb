<!--ログインしているときの画面-->
<% if logged_in? %>
  <div id="content">
    <div class="hero">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <div class="hero__title">Magnificence</div>
            <img src="/Dahlia.jpg" alt="">
          </div>
          <div class="swiper-slide">
            <div class="hero__title">Solidarity</div>
            <img src="/Gaillardia.jpg" alt="">
          </div>
          <div class="swiper-slide">
            <div class="hero__title">Gentility</div>
            <img src="/Geranium.jpg" alt="">
          </div>
        </div>
        <div class="swiper-pagination"></div>
        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <!--<div class="hero__footer">-->
      </div>
    </div>
  </div>
  <section class="content-width">
    <div id="main-content">
      <aside class="side left">
        <div class="side__inner">
          <a class="twitter icon tween-animate-title" href="#">Twitter</a>
        </div>
      </aside>
      <main>
        <div class="center-position">
          <div class="world__title main-title item">
            <div class="world__btn item">
              <%= link_to "ToDoリスト！", task_path(current_user),
                          class: "btn solid" %>
              <%= link_to "Small stepとBig area", step_path(current_user),
                          class: "btn solid" %>
              <%= link_to "Macの原則", mac_path(current_user),
                          class: "btn solid" %>
              <%= link_to "If-Thenテクニック", it_path(current_user),
                          class: "btn solid" %>
              <%= link_to "グラフを見る(ビッグエリア)", steps_path,
                          class: "btn slide-bg" %>
              <% if current_user.admin? %>
                <%= link_to "ユーザーを見る(管理者のみ)", user_path(current_user),
                            class: "btn slide-bg" %>
                </div>
                </div>
                </div>
      </section>
    <% end %>
    <!--ログインしていない時-->
<% else %>
  <div id="main-content">
    <aside class="side left">
      <div class="side__inner">
        <a class="twitter icon tween-animate-title" href="#">Twitter</a>
      </div>
    </aside>
    <main>
      <section class="world">
        <div class="world__inner">
          <div class="world__img cover-slide">
            <img class="img-zoom" src="/Rose-banquet3.jpg" alt=""/>
          </div>
          <div class="world__texts appear left">
            <div class="world__texts-inner">
              <div class="world__title main-title item">
                <span class="purple">LifeHack</span>
                <span>Tools！へようこそ！</span>
              </div>
              <div class="world__sub sub-title item">ライフハックツール</div>
              <div class="world__description item">
                <p>目標達成や習慣化のアシストツールとして
                  <br>LifeHack Tools！を活用して
                </p>
                <p> 文字通り人生(Life)をハックしましょう！</p>
              </div>
              <div class="world__btn item">
                <%= link_to "ユーザー登録する！", new_user_path, class: "btn slide-bg" %>
              </div>
            </div>
          </div>
        </div>
      </section>
<% end %>
<div class="center-position">
  <button class="btn float">Button</button>
  <button class="btn filled">Button</button>
  <button class="btn letter-spacing">Button</button>
  <button class="btn shadow">Button</button>
  <button class="btn solid">Button</button>
</div>
</main>
<aside class="side right">
  <div class="side__inner">
    <span>&copy;Ota</span>
  </div>
</aside>
