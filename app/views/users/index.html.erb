 <div id="global-container">
    <div id="container">
      <div id="content">
        <div class="hero"></div>
        <div class="swiper-container">
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <div class="hero__title">Enjoy Rich</div>
              <%= image_tag 'Dahlia.jpg' %>
            </div>
            <div class="swiper-slide">
              <div class="hero__title">Fantastic</div>
              <%= image_tag 'Gaillardia.jpg' %>
            </div>
            <div class="swiper-slide">
              <div class="hero__title">Experience</div>
              <%= image_tag 'Geranium.jpg' %>
            </div>
          </div>
          <div class="hero__footer">
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if logged_in? %>
    <%= render 'root' %>
      <%= link_to "ToDoリスト！", task_path(current_user),
                  class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
      <%= link_to "Small stepとBig area", step_path(current_user),
                  class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
      <%= link_to "Macの原則", mac_path(current_user),
                  class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
      <%= link_to "If-Thenテクニック", it_path(current_user),
                  class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
      <%= link_to "グラフを見る(ビッグエリア)", steps_path,
                  class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
      <% if current_user.admin? %>
        <%= link_to "ユーザーを見る(管理者のみ)", user_path(current_user),
                    class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
      <% end %>
  <% else %>
    <%= render 'root' %>
    <%= link_to "ユーザー登録する！", new_user_path, class: "btn-sticky",
                style: "font-size: 28px; color: #333;" %>
  <% end %>

