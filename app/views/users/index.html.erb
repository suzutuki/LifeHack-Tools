<% if logged_in? %>
  <%= render 'home' %>
  <%= link_to "ToDoリスト！を見る", user_path(current_user),
              class: "btn-sticky", style: "font-size: 28px; color: #333;" %>
  <%= render 'footer_fix' %>
<% else %>
  <%= render 'home' %>
  <%= link_to "ユーザー登録する！", signup_path, class: "btn-sticky",
              style: "font-size: 28px; color: #333;" %>
<% end %>
<%= render 'footer_fix' %>