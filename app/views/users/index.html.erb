<!--ログインしているときの画面-->
<% if logged_in? %>
  <div id="content">
    <div class="hero">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <div class="hero__title">ToDoリスト</div>
            <img src="/Todolist.jpg" alt="">
          </div>
          <div class="swiper-slide">
            <div class="hero__title">IF−Thenテクニック</div>
            <img src="/plan.jpg" alt="">
          </div>
          <div class="swiper-slide">
            <div class="hero__title">MACの原則</div>
            <img src="/Goals.jpg" alt="">
          </div>
          <div class="swiper-slide">
            <div class="hero__title">small step</div>
            <img src="/Rose-banquet3.jpg" alt="">
          </div>
        </div>
        <div class="swiper-pagination"></div>
        <!--<div class="hero__footer">-->
      </div>
    </div>
  </div>
  <!--ココは問題なし-->
  <div id="main-content">
    <aside class="side left">
      <div class="side__inner">
        <a class="twitter icon tween-animate-title" href="#">Twitter</a>
      </div>
    </aside>
    <main>
      <div class="popular__inner appear up">
        <div class="popular__container">
          <%= link_to "ToDoリスト！", task_path(current_user), class: "btn slide-bg" %>
          <%= link_to "Small stepとBig area", step_path(current_user), class: "btn slide-bg" %>
          <%= link_to "Macの原則", mac_path(current_user), class: "btn slide-bg" %>
          <%= link_to "If-Thenテクニック", it_path(current_user), class: "btn slide-bg" %>
          <%= link_to "グラフを見る(ビッグエリア)", steps_path, class: "btn slide-bg" %>
          <%= link_to "グラフを見る(ビッグエリア)", step_path(current_user), class: "btn slide-bg" %>
          <%= link_to "HIIT", hiits_path, class: "btn slide-bg" %>
          <% if current_user.admin? %>
            <%= link_to "ユーザーを見る(管理者のみ)", user_path(current_user), class: "btn slide-bg" %>
            </div>
            </div>
          <% end %>
          <!--ログインしていない時-->
<% else %>
  <div id="main-content">
    <aside class="side left">
      <div class="side__inner">
        <a class="twitter icon tween-animate-title" href="#">Twitter</a>
      </div>
    </aside>
    <main>
      <section class="world">
        <div class="world__inner">
          <div class="world__img cover-slide">
            <img class="img-zoom" src="/Rose-banquet3.jpg" alt=""/>
          </div>
          <div class="world__texts appear left">
            <div class="world__texts-inner">
              <div class="world__title main-title item">
                <span class="purple">LifeHack Tools</span>
                <div class="world__sub sub-title item">ライフハックツールズ</div>
                <span>にようこそ！</span><br>
             </div>
              <div class="world__description item">
                <p>目標達成や習慣化のアシストツールとして
                  <br>LifeHack Tools！を活用して
                </p>
                <p> 文字通り人生(Life)をハックしましょう！</p>
              </div>
              <div class="world__btn item">
                <%= link_to "ユーザー登録する！", new_user_path, class: "btn slide-bg" %>
                <%= link_to "簡単ログイン", easy_login_path, method: :get, class: 'btn slide-bg' %>
              </div>
            </div>
          </div>
        </div>
      </section>
<% end %>
</main>
<aside class="side right">
  <div class="side__inner">
    <span>&copy;Ota</span>
  </div>
</aside>
