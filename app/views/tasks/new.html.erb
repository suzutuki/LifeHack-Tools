<h1>新規追加画面</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for @task do |f| %>
  <li>
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, class: 'form-control'%>
    <% if @task.errors.any? %>
    <%= @task.errors.messages[:title][0] %>
    <% end %>
  </li>
    <p>
<%= f.submit "新規作成", class: "btn btn-primary" %>
    </p>
    <% end %>
</ul>
 </div>