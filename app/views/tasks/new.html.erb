<% provide(:title, "new") %>
<div class= "site-width">
  <section id="new-todo-list">
    <h1>ToDoリスト！</h1>
      <!--<div class="row">-->
        <div class="col-md-6 col-md-offset-3">
      <div class=container>
      <div class=prev-left>
      <%=link_to(content_tag(:i,'',class:"fas fa-angle-double-left fa-3x",style: "color: rgb(80,80,80);"),root_path)%>
      </div>
    <div class="new-todo-list-form">
<%= form_for @task do |f| %>
  <li id="new-list">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, class: 'form-control'%>
    <%= f.label :メモ %>
    <%= f.text_area :content,class: 'form-control'%>
    <% if @task.errors.any? %>
    <%= @task.errors.messages[:title][0] %>
    <% end %>
  </li>
    <p>
<%= f.submit "新規作成", class: "btn btn-primary" %>
    </p>
    
<% end %>
    </div>
    </div>
    </div> 
 </div>
</section>
</div>