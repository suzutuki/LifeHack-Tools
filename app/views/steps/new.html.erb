<h1 class="text-center">New Step</h1>
<div class="site-width">
  <%= form_with model: @steps, url: steps_path, local: true do |form| %>
    <% @steps.collection.each do |step| %>
      <%= fields_for 'steps[]', step do |field| %>
        <%= field.label 'スモールステップ', class: 'label' %>
        <%= field.text_field :name, class: 'form-field', required: true, placeholder: '目標を細切れにしたものを設定してください' %>
      <% end %>
    <% end %>
    <%= form.submit %>
    <%= link_to '戻る', step_path(current_user) %>
  <% end %>
</div>
